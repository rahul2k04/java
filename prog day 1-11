public class AgeDifference {
    public static void main(String[] args) {
        int elderBrotherAge = 28;
        int youngerBrotherAge = 24;

        int ageDifference = elderBrotherAge - youngerBrotherAge;

        int olderBrotherAgeWhenYoungerWas5 = elderBrotherAge + (5 - youngerBrotherAge);

        // Check if the age difference is more than 3
        if (ageDifference > 3) {
            System.out.println("The age of the younger brother when the older brother was 5: " + youngerBrotherAge);
        } else {
            System.out.println("The age of the older brother when the younger brother was 5: " + olderBrotherAgeWhenYoungerWas5);
        }
    }
}
