import java.util.Random;

public class LuckyGuess {
    public static void main(String[] args) {
        Random random = new Random();
        int randomNumber = random.nextInt(5) + 1;

        int guess = 3; // Change this to any number between 1 and 5

        switch (guess) {
            case 1:
                if (randomNumber == 1) {
                    System.out.println("Congratulations! You made a lucky guess!");
                } else {
                    System.out.println("Sorry, better luck next time!");
                }
                break;
            case 2:
                if (randomNumber == 2) {
                    System.out.println("Congratulations! You made a lucky guess!");
                } else {
                    System.out.println("Sorry, better luck next time!");
                }
                break;
            case 3:
                if (randomNumber == 3) {
                    System.out.println("Congratulations! You made a lucky guess!");
                } else {
                    System.out.println("Sorry, better luck next time!");
                }
                break;
            case 4:
                if (randomNumber == 4) {
                    System.out.println("Congratulations! You made a lucky guess!");
                } else {
                    System.out.println("Sorry, better luck next time!");
                }
                break;
            case 5:
                if (randomNumber == 5) {
                    System.out.println("Congratulations! You made a lucky guess!");
                } else {
                    System.out.println("Sorry, better luck next time!");
                }
                break;
            default:
                System.out.println("Invalid guess! Please enter a number between 1 and 5.");
        }

        System.out.println("Random number was: " + randomNumber);
    }
}
